<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:orientation="vertical"
    android:background="#000000">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:background="@drawable/die_face_1"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/score1"
        android:layout_toEndOf="@+id/score1" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:background="@drawable/die_face_1"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="36dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Roll Dice!"
        android:id="@+id/button"
        android:layout_marginBottom="97dp"
        android:background="@drawable/large_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player 1"
        android:id="@+id/player1"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:textColor="#FF0000"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score: 0"
        android:id="@+id/score1"
        android:layout_below="@+id/player1"
        android:layout_alignParentStart="true"
        android:textColor="#FF0000" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bank Your Points"
        android:id="@+id/bank"
        android:layout_marginBottom="46dp"
        android:background="@drawable/large_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Points: 0"
        android:id="@+id/points"
        android:layout_marginBottom="46dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player 2"
        android:id="@+id/player2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score: 0"
        android:id="@+id/score2"
        android:layout_alignTop="@+id/score1"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF" />

</RelativeLayout>
